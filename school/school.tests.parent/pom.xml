<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>examples.school</groupId>
	<artifactId>school.tests.parent</artifactId>
	<name>EMF-IncQuery School Example</name>
	<url>http://viatra.inf.mit.bme.hu/incquery</url>
	<parent>
		<artifactId>org.eclipse.viatra.parent</artifactId>
		<version>1.2.0-SNAPSHOT</version>
		<groupId>org.eclipse.viatra</groupId>
	</parent>
	<packaging>pom</packaging>
	<properties>
		<jacoco.targetdir>${project.basedir}/../target</jacoco.targetdir>
		<sonar.surefire.reportsPath>../target/surefire-reports/</sonar.surefire.reportsPath>
		<viatra.p2.repository>https://hudson.eclipse.org/viatra/job/viatra-master/lastSuccessfulBuild/artifact/releng/org.eclipse.viatra.update/target/repository/</viatra.p2.repository>
	</properties>
	<modules>
		<module>../school</module>
		<module>../school.edit</module>
		<module>../school.editor</module>
		<module>../school.query</module>
		<module>../school.instancemodel</module>
		<module>../school.tests</module>
		<module>../school.base.test</module>
		<module>../school.feature</module>
		<module>../school.update</module>
	</modules>
	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<resolver>p2</resolver>
					<target>
						<artifact>
							<groupId>examples.school</groupId>
							<artifactId>school.tests.parent</artifactId>
							<version>${project.version}</version>
							<classifier>schooltest</classifier>
						</artifact>
					</target>
					<ignoreTychoRepositories>true</ignoreTychoRepositories>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>viatra-p2-repository</id>
			<layout>p2</layout>
			<url>${viatra.p2.repository}</url>
		</repository>
		<repository>
			<id>viatra-snapshots</id>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<url>https://repo.eclipse.org/content/repositories/viatra2-snapshots/</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>viatra-snapshots</id>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<url>https://repo.eclipse.org/content/repositories/viatra2-snapshots/</url>
		</pluginRepository>
	</pluginRepositories>
	<scm>
		<connection>scm:git:git://github.com/ujhelyiz/EMF-IncQuery-Examples.git</connection>
		<url>https://github.com/ujhelyiz/EMF-IncQuery-Examples</url>
	</scm>
	<ciManagement>
		<url>https://build.inf.mit.bme.hu/jenkins</url>
		<system>Jenkins</system>
	</ciManagement>
	<issueManagement>
		<url>https://github.com/ujhelyiz/EMF-IncQuery-Examples/issues</url>
		<system>GitHub Issues</system>
	</issueManagement>
<version>1.2.0-SNAPSHOT</version>
</project>
